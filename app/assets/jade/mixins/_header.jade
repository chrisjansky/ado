mixin header(mode)
  header#js-header.o-header.l-wrap
    .l-inline--later
    
      .l-inline__cell
        a.o-logo(href="index")
          | UTB/FMK/
          span.o-logo__studio AteliÃ©r Design obuvi

      .l-inline__cell
        nav.o-nav
          button.o-nav__toggle.ion-navicon(data-nav) Menu
          ul.o-nav__list
            if (mode == "subpage")
              each page in pages
                li.o-nav__item
                  a.o-nav__link(href="index#section-#{page.slug}", data-scrollto, data-nav-link)= page.title
            else
              each page in pages
                li.o-nav__item
                  a.o-nav__link(href="##{page.slug}", data-scrollto, data-nav-link)= page.title
            li.o-nav__item
              ul.o-languages
                li.o-languages__item
                  a(href="#").o-nav__link CZ
                li.o-languages__item.o-languages__item--active
                  a(href="#").o-nav__link EN
