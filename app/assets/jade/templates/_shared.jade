block template-variables
  - var page = {title: "Title", description: "Project description."}

doctype
html.no-js(lang="en")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
      title!= page.title
      meta(name="description", content=page.description)
      meta(name="viewport" content="width=device-width, initial-scale=1.0")

      link(href="http://fonts.googleapis.com/css?family=Playfair+Display:400|Playfair+Display+SC:700|Open+Sans:400,600", rel="stylesheet", type="text/css")
      link(href="http://code.ionicframework.com/ionicons/2.0.0/css/ionicons.min.css", rel="stylesheet", type="text/css")

  body
    block template-body

    block template-content
      p Basic template.

    block template-foot
      script(src="http://code.jquery.com/jquery-latest.min.js")

      <!-- build:remove -->
      script window.jQuery || document.write("<script src='../bower_components/jquery/dist/jquery.js'><\/script>")
      <!-- endbuild -->
